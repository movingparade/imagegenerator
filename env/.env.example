# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/ad_variants_studio"

# Authentication
NEXTAUTH_SECRET="your-super-secure-secret-key-change-in-production"
SESSION_SECRET="another-secure-secret-for-session-management"

# Google Cloud Storage
GOOGLE_PROJECT_ID="your-gcp-project-id"
GOOGLE_APPLICATION_CREDENTIALS_JSON='{"type":"service_account","project_id":"your-project",...}'
# Alternative: Use a file path instead of JSON string
# GOOGLE_APPLICATION_CREDENTIALS="/path/to/service-account-key.json"
GCS_BUCKET_NAME="ad-variants-storage"

# Google AI (Gemini)
GEMINI_API_KEY="your-gemini-api-key-from-google-ai-studio"
GEMINI_IMAGE_MODEL="gemini-2.5-flash-image"
GOOGLE_AI_API_KEY="your-gemini-api-key-from-google-ai-studio"

# Server Configuration
PORT=5000
NODE_ENV="development"

# Database Connection Pool (Optional)
PGHOST="localhost"
PGPORT="5432" 
PGUSER="username"
PGPASSWORD="password"
PGDATABASE="ad_variants_studio"

# Rate Limiting (Optional)
API_RATE_LIMIT_REQUESTS_PER_HOUR="1000"
AI_GENERATION_DAILY_LIMIT_TEXT="50"
AI_GENERATION_DAILY_LIMIT_IMAGE="20"
FILE_UPLOAD_DAILY_LIMIT_MB="100"

# File Processing (Optional)
MAX_FILE_SIZE_MB="20"
ALLOWED_MIME_TYPES="image/svg+xml,font/ttf,font/otf,image/jpeg,image/png"
RENDER_WIDTH_DEFAULT="1200"
SIGNED_URL_EXPIRY_HOURS="24"

# Logging (Optional)
LOG_LEVEL="info"
ENABLE_REQUEST_LOGGING="true"
ENABLE_ERROR_LOGGING="true"
ENABLE_AUDIT_LOGGING="true"

# Security (Optional)
BCRYPT_ROUNDS="10"
ENABLE_CSRF_PROTECTION="true"
CORS_ORIGINS="http://localhost:3000,http://localhost:5000"

# AI Configuration (Optional)
GEMINI_TEMPERATURE="0.7"
GEMINI_MAX_OUTPUT_TOKENS="1024"
GEMINI_TOP_P="0.8"
GEMINI_TOP_K="40"

# Development Only
VITE_API_BASE_URL="http://localhost:5000"
